<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Details - <%= student.name %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="container mt-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page"><%= student.name %></li>
            </ol>
        </nav>

        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <h2 class="h4 mb-0">Student Information</h2>
                    </div>
                    <div class="card-body">
                        <p><strong>Name:</strong> <%= student.name %></p>
                        <p><strong>Email:</strong> <%= student.email %></p>
                        <p><strong>Total Classes:</strong> <%= student.currentPack %></p>
                        <p><strong>Completed Classes:</strong> <%= student.count %></p>
                        <p><strong>Remaining Classes:</strong> <%= student.remaining %></p>
                        <p><strong>Expiration Date:</strong> <%= student.expiration %></p>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <h2 class="h4 mb-0">Class Progress</h2>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-5">
                                <canvas id="progressChart" style="max-height: 200px;"></canvas>
                            </div>
                            <div class="col-md-7">
                                <canvas id="monthlyChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h2 class="h4 mb-0">Class Statistics</h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h3 class="h5">Completion Rate</h3>
                                <p class="h2"><%= Math.round((student.count / student.currentPack) * 100) %>%</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h3 class="h5">Classes Remaining</h3>
                                <p class="h2"><%= student.remaining %></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h3 class="h5">Days Until Expiration</h3>
                                <p class="h2"><%= student.expiration === 'INVALID' ? 'Expired' : 'Valid' %></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Create the progress pie chart
        const pieCtx = document.getElementById('progressChart').getContext('2d');
        new Chart(pieCtx, {
            type: 'doughnut',
            data: {
                labels: ['Completed', 'Remaining'],
                datasets: [{
                    data: [<%= student.count %>, <%= student.remaining %>],
                    backgroundColor: [
                        'rgb(75, 192, 192)',
                        'rgb(255, 99, 132)'
                    ]
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            boxWidth: 12
                        }
                    }
                }
            }
        });

        // Create the monthly progress line chart
        const lineCtx = document.getElementById('monthlyChart').getContext('2d');
        
        // Format monthly data
        const monthlyStats = <%- JSON.stringify(student.monthlyStats) %>;
        const monthlyData = {
            labels: monthlyStats.map(stat => {
                const [year, month] = stat.month.split('-');
                return new Date(year, month - 1).toLocaleDateString('en-US', { month: 'short' });
            }),
            datasets: [{
                label: 'Classes per Month',
                data: monthlyStats.map(stat => stat.count),
                borderColor: 'rgb(75, 192, 192)',
                tension: 0.1,
                fill: false
            }]
        };

        new Chart(lineCtx, {
            type: 'line',
            data: monthlyData,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                }
            }
        });
    </script>
</body>
</html> 