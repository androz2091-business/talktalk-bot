<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Details - <%= student.name %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="container mt-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page"><%= student.name %></li>
            </ol>
        </nav>

        <div id="loadingOverlay" style="display:none; position:fixed; top:0; left:0; width:100vw; height:100vh; background:rgba(255,255,255,0.7); z-index:9999; align-items:center; justify-content:center; flex-direction:column;">
            <div class="spinner-border text-primary" role="status" style="width:4rem; height:4rem;">
                <span class="visually-hidden">Loading...</span>
            </div>
            <div class="mt-3 text-center fw-bold" style="font-size:1.5rem;">로딩중...</div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <h2 class="h5 mb-0">Student Information</h2>
                    </div>
                    <div class="card-body">
                        <p><strong>Name:</strong> <%= student.name %></p>
                        <p><strong>Email:</strong> <%= student.email %></p>
                        <p><strong>Total Classes:</strong> <%= student.currentPack %></p>
                        <p><strong>Completed Classes:</strong> <%= student.count %></p>
                        <p><strong>Remaining Classes:</strong> <%= student.remaining %></p>
                        <p><strong>Expiration Date:</strong> <%= student.expiration %></p>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <h2 class="h5 mb-0">Class Progress</h2>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-5">
                                <canvas id="progressChart" style="max-height: 300px;"></canvas>
                            </div>
                            <div class="col-md-7">
                                <canvas id="monthlyChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
          <div>
            <div class="card">
                <div class="card-header">
                    <h2 class="h5">Class Statistics</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h3 class="h5">Completion Rate</h3>
                                    <p class="h3 mb-0">
                                        <% if (student.currentPack > 0) { %><%= Math.round((student.count / student.currentPack) * 100) %>%<% } else { %>0%<% } %>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h3 class="h5">Classes Remaining</h3>
                                    <p class="h3 mb-0"><%= student.remaining || 0 %></p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h3 class="h5">Expiration Status</h3>
                                    <p class="h3 mb-0">
                                        <% if (student.expiration === 'INVALID') { %><span class="text-danger">Expired</span><% } else if (student.expiration) { %><span class="text-success">Valid</span><% } else { %><span class="text-warning">No Date</span><% } %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          </div>
        </div>

        <% if (student.completedClasses && student.completedClasses.length > 0) { %>
            <div class="row">
              <div>
                <div class="card mt-4">
                  <div class="card-header"><h2 class="h5">Completed Classes</h2></div>
                  <ul class="list-group list-group-flush">
                    <% student.completedClasses.forEach(cls => { %>
                      <li class="list-group-item<%= cls.cancelled ? ' cancelled-class' : '' %>">
                        <%= new Date(cls.date).toLocaleString('en-GB', { year: 'numeric', month: '2-digit', day: '2-digit', hour: '2-digit', minute: '2-digit' }) %>
                        <% if (cls.title) { %> - <%= cls.title %><% } %>
                        <% if (cls.cancelled) { %> <span>(Cancelled)</span><% } %>
                      </li>
                    <% }) %>
                  </ul>
                </div>
              </div>
            </div>
          <% } %>   
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Create the progress pie chart
        const pieCtx = document.getElementById('progressChart').getContext('2d');
        new Chart(pieCtx, {
            type: 'doughnut',
            data: {
                labels: ['Completed', 'Remaining'],
                datasets: [{
                    data: [<%= student.count %>, <%= student.remaining %>],
                    backgroundColor: [
                        '#EB257A', // Completed
                        '#FEF538'  // Remaining
                    ],
                    borderColor: '#1D1C3B',
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            boxWidth: 12
                        }
                    }
                }
            }
        });

        // Create the monthly progress line chart
        const lineCtx = document.getElementById('monthlyChart').getContext('2d');
        
        // Format monthly data
        const monthlyStats = <%- JSON.stringify(student.monthlyStats) %>;
        const monthlyData = {
            labels: monthlyStats.map(stat => {
                const [year, month] = stat.month.split('-');
                return new Date(year, month - 1).toLocaleDateString('en-US', { month: 'short' });
            }),
            datasets: [{
                label: 'Classes per Month',
                data: monthlyStats.map(stat => stat.count),
                borderColor: '#EB257A',
                backgroundColor: '#FEF538',
                tension: 0.1,
                fill: true
            }]
        };

        new Chart(lineCtx, {
            type: 'line',
            data: monthlyData,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1,
                            color: '#1D1C3B'
                        },
                        grid: {
                            color: '#FEF53822'
                        }
                    },
                    x: {
                        ticks: {
                            color: '#1D1C3B'
                        },
                        grid: {
                            color: '#EB257A22'
                        }
                    }
                }
            }
        });

        document.getElementById('refreshBtn').addEventListener('click', function() {
            document.getElementById('loadingOverlay').style.display = 'flex';
            location.reload();
        });
    </script>
</body>
</html> 