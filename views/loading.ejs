<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Loading - TalkTalk</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <style>
        .loading-spinner {
            width: 3rem;
            height: 3rem;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <div class="spinner-border loading-spinner text-primary mb-3" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <h2 class="mb-3">Loading TalkTalk Dashboard</h2>
                <p class="text-muted">Fetching the latest information...</p>
            </div>
        </div>
    </div>

    <script>
        function checkCacheStatus() {
            fetch('/api/cache-status')
                .then(response => response.json())
                .then(data => {
                    if (data.ready) {
                        window.location.href = '/';
                    } else {
                        setTimeout(checkCacheStatus, 1000); // Check again in 1 second
                    }
                })
                .catch(error => {
                    console.error('Error checking cache status:', error);
                    setTimeout(checkCacheStatus, 1000);
                });
        }

        // Start checking cache status
        checkCacheStatus();
    </script>
</body>
</html> 