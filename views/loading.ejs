<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Loading - TalkTalk Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body class="dashboard-container">
    <!-- Loading Screen -->
    <div class="loading-overlay" style="display: flex;">
        <div class="text-center">
            <!-- TalkTalk Logo -->
            <div class="mb-4">
                <div class="logo-container mx-auto" style="width: 120px; height: 120px; border-radius: 50%; overflow: hidden; animation: pulse 2s infinite; box-shadow: 0 4px 20px rgba(235, 37, 122, 0.3);">
                    <img src="/talk.jpeg" alt="TalkTalk Logo" style="width: 100%; height: 100%; object-fit: cover;">
                </div>
            </div>

            <!-- Loading Text -->
            <h2 class="mb-3" style="color: #1D1C3B; font-weight: 600;">Loading TalkTalk Dashboard</h2>
            <p class="text-muted mb-4">Fetching the latest student data and analytics...</p>
            
            <!-- Progress Steps -->
            <div class="loading-steps">
                <div class="step active" id="step1">
                    <div class="step-icon">ðŸ“Š</div>
                    <div class="step-text">Reading Google Sheets</div>
                </div>
                <div class="step" id="step2">
                    <div class="step-icon">ðŸ“…</div>
                    <div class="step-text">Processing Calendly Data</div>
                </div>
                <div class="step" id="step3">
                    <div class="step-icon">âœ¨</div>
                    <div class="step-text">Preparing Dashboard</div>
                </div>
            </div>
        </div>
    </div>

    <style>
        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }
        
        .loading-steps {
            display: flex;
            justify-content: center;
            gap: 2rem;
            margin-top: 2rem;
        }
        
        .step {
            text-align: center;
            opacity: 0.3;
            transition: opacity 0.5s ease;
        }
        
        .step.active {
            opacity: 1;
        }
        
        .step-icon {
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }
        
        .step-text {
            font-size: 0.875rem;
            color: #64748b;
            font-weight: 500;
        }
        
        @media (max-width: 768px) {
            .loading-steps {
                flex-direction: column;
                gap: 1rem;
            }
        }
    </style>

    <script>
        let currentStep = 1;
        
        function animateSteps() {
            setTimeout(() => {
                document.getElementById('step2').classList.add('active');
                currentStep = 2;
            }, 2000);
            
            setTimeout(() => {
                document.getElementById('step3').classList.add('active');
                currentStep = 3;
            }, 4000);
        }
        
        function checkCacheStatus() {
            fetch('/api/cache-status')
                .then(response => response.json())
                .then(data => {
                    if (data.ready) {
                        // Show completion state briefly
                        document.querySelectorAll('.step').forEach(step => step.classList.add('active'));
                        setTimeout(() => {
                            window.location.href = '/';
                        }, 500);
                    } else {
                        setTimeout(checkCacheStatus, 1000); // Check again in 1 second
                    }
                })
                .catch(error => {
                    console.error('Error checking cache status:', error);
                    setTimeout(checkCacheStatus, 2000);
                });
        }

        animateSteps();
        setTimeout(checkCacheStatus, 1000);
    </script>
</body>
</html> 