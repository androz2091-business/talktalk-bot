<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TalkTalk Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="mb-0">TalkTalk Dashboard</h1>
            <div class="d-flex justify-content-end mb-3">
                <button id="refreshBtn" class="btn btn-main">Refresh Data</button>
            </div>
        </div>
        
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Total Classes</th>
                        <th>Completed Classes</th>
                        <th>Remaining Classes</th>
                        <th>Expiration Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% students.forEach(student => { %>
                        <tr onclick="window.location='/student/<%= student.email %>'">
                            <td><%= student.name %></td>
                            <td><%= student.email %></td>
                            <td><%= student.currentPack %></td>
                            <td><%= student.count %></td>
                            <td><%= student.remaining %></td>
                            <td><%= student.expiration %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 