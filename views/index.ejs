<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TalkTalk Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body class="dashboard-container">
    <!-- Dashboard Header -->
    <div class="dashboard-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="dashboard-title">TalkTalk Dashboard</h1>
                    <p class="dashboard-subtitle">Student Management & Analytics</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <button id="refreshBtn" class="btn btn-main">
                        <i class="bi bi-arrow-clockwise me-2"></i>Refresh Data
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <!-- Statistics Cards -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon primary">
                    <span>ðŸ‘¥</span>
                </div>
                <div class="stat-value"><%= students.length %></div>
                <div class="stat-label">Total Students</div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon success">
                    <span>âœ…</span>
                </div>
                <div class="stat-value"><%= students.reduce((sum, s) => sum + (s.count || 0), 0) %></div>
                <div class="stat-label">Classes Completed</div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon warning">
                    <span>ðŸ“š</span>
                </div>
                <div class="stat-value"><%= students.reduce((sum, s) => sum + (s.remaining || 0), 0) %></div>
                <div class="stat-label">Classes Remaining</div>
            </div>
        </div>

        <!-- Students Table -->
        <div class="table-container">
            <div class="card-header">
                <h2 class="h5 mb-0">Student Overview</h2>
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Student</th>
                            <th>Email</th>
                            <th>Total Classes</th>
                            <th>Progress</th>
                            <th>
                                Status 
                                <span class="status-info-icon" data-bs-toggle="tooltip" data-bs-placement="top" 
                                      title="Active: has bookings within 2 weeks | Inactive: no bookings in the last 2 weeks | Expired: all classes used">
                                    â“˜
                                </span>
                            </th>
                            <th>Expiration</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% students.forEach(student => { %>
                            <tr onclick="window.location='/student/<%= student.email %>'" style="cursor: pointer;">
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div>
                                            <div class="fw-semibold"><%= student.name || 'Unknown' %></div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="text-muted small"><%= student.email %></div>
                                </td>
                                <td>
                                    <div class="small"><%= student.currentPack || 0 %></div>
                                </td>
                                <td>
                                    <div class="progress" style="height: 8px; border-radius: 4px;">
                                        <% 
                                        const total = (student.count || 0) + (student.remaining || 0);
                                        const progressPercent = total > 0 ? Math.round(((student.count || 0) / total) * 100) : 0;
                                        %>
                                        <div class="progress-bar" style="width: <%= progressPercent %>%; background: linear-gradient(90deg, #EB257A, #FEF538);"></div>
                                    </div>
                                    <small class="text-muted"><%= progressPercent %>%</small>
                                </td>
                                <td>
                                    <% 
                                    const statusClass = student.statusClass || 'badge-secondary';
                                    const statusText = student.status || 'Unknown';
                                    %>
                                    <span class="badge <%= statusClass %>"><%= statusText %></span>
                                </td>
                                <td>
                                    <div class="text-muted"><%= student.expiration || 'TBD' %></div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Initialize tooltips
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });

        document.getElementById('refreshBtn').addEventListener('click', function() {
            const button = this;
            const originalText = button.innerHTML;
            
            button.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Refreshing...';
            button.disabled = true;
            
            window.location.href = '/refresh';
        });
    </script>
</body>
</html>